<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-8">
    <div class="text-center mb-6">
      <% if @order.paid? || @order.completed? %>
        <div class="text-6xl mb-4">‚úÖ</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Payment Successful!</h1>
        <p class="text-gray-600">Thank you for your purchase</p>
      <% elsif @order.pending? %>
        <div class="text-6xl mb-4">‚è≥</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Order Pending</h1>
        <p class="text-gray-600">Awaiting payment</p>
      <% else %>
        <div class="text-6xl mb-4">‚ùå</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Order <%= @order.status.titleize %></h1>
      <% end %>
    </div>

    <!-- Order Details -->
    <div class="border-t border-b py-6 space-y-4">
      <div class="flex justify-between">
        <span class="text-gray-600">Order Number:</span>
        <span class="font-medium">#<%= @order.id %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Date:</span>
        <span class="font-medium"><%= @order.created_at.strftime("%B %d, %Y at %H:%M") %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Status:</span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= @order.paid? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= @order.status.upcase %>
        </span>
      </div>
    </div>

    <!-- Product Details -->
    <div class="py-6 border-b">
      <h2 class="font-semibold text-gray-900 mb-4">Product Details</h2>
      <div class="flex justify-between items-start">
        <div>
          <p class="font-medium text-gray-900"><%= @order.product.name %></p>
          <p class="text-sm text-gray-500">By <%= @order.producer.name %></p>
          <p class="text-sm text-gray-600 mt-1">Quantity: <%= @order.quantity %></p>
        </div>
        <div class="text-right">
          <p class="font-medium text-gray-900"><%= @order.product.formatted_price %> √ó <%= @order.quantity %></p>
          <p class="text-sm text-gray-600"><%= @order.formatted_total %></p>
        </div>
      </div>
    </div>

    <!-- Payment Breakdown -->
    <div class="py-6 border-b">
      <h2 class="font-semibold text-gray-900 mb-4">Payment Breakdown</h2>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-gray-600">Subtotal:</span>
          <span class="font-medium"><%= @order.formatted_total %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Platform Fee (10%):</span>
          <span class="font-medium"><%= @order.formatted_platform_fee %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Producer Receives:</span>
          <span class="font-medium text-green-600"><%= @order.formatted_producer_amount %></span>
        </div>
        <div class="border-t pt-2 flex justify-between font-bold text-lg">
          <span>Total Paid:</span>
          <span class="text-green-600"><%= @order.formatted_total %></span>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 space-y-3">
      <% if @order.pending? %>
        <%= link_to "Complete Payment", payment_order_path(@order), class: "block w-full text-center px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700" %>
      <% end %>
      <%= link_to "View All Orders", orders_path, class: "block w-full text-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50" %>
      <%= link_to "Continue Shopping", products_path, class: "block w-full text-center px-6 py-3 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>

  <% if @order.paid? || @order.completed? %>
    <div class="mt-6 bg-green-50 border border-green-200 rounded-lg p-4">
      <h3 class="font-semibold text-green-900 mb-2">‚ú® Split Payment Completed!</h3>
      <div class="text-sm text-green-800 space-y-1">
        <p>‚Ä¢ <%= @order.formatted_producer_amount %> transferred to <%= @order.producer.name %>'s Stripe account</p>
        <p>‚Ä¢ <%= @order.formatted_platform_fee %> kept as platform commission</p>
        <p>‚Ä¢ All done automatically by Stripe Connect! üéâ</p>
      </div>
    </div>
  <% end %>
</div>
