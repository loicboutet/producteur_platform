<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Product</h1>

    <%= form_with model: @product, class: "space-y-6" do |f| %>
      <% if @product.errors.any? %>
        <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h2 class="font-bold mb-2"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :price, "Price (â‚¬)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :price, step: 0.01, min: 0, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500" %>
        </div>

        <div>
          <%= f.label :stock, "Stock Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :stock, min: 0, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Update Product", class: "px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 cursor-pointer" %>
        <div class="space-x-3">
          <%= link_to "Cancel", product_path(@product), class: "text-gray-600 hover:text-gray-900" %>
          <%= button_to "Delete", product_path(@product), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "text-red-600 hover:text-red-900" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
