<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Add New Product</h1>

    <%= form_with model: @product, class: "space-y-6" do |f| %>
      <% if @product.errors.any? %>
        <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h2 class="font-bold mb-2"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "Organic Tomatoes" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "Fresh organic tomatoes from our farm..." %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :price, "Price (â‚¬)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :price, step: 0.01, min: 0, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "9.99" %>
        </div>

        <div>
          <%= f.label :stock, "Stock Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :stock, min: 0, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "100" %>
        </div>
      </div>

      <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              Remember: The platform takes a 10% commission on each sale. You'll receive 90% of the price.
            </p>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Create Product", class: "px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 cursor-pointer" %>
        <%= link_to "Cancel", products_path, class: "text-gray-600 hover:text-gray-900" %>
      </div>
    <% end %>
  </div>
</div>
