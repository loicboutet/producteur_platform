<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow rounded-lg p-8">
    <div class="text-center mb-6">
      <% if @order_group.paid? || @order_group.completed? %>
        <div class="text-6xl mb-4">‚úÖ</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Payment Successful!</h1>
        <p class="text-gray-600">Multi-producer split payment completed</p>
      <% elsif @order_group.pending? %>
        <div class="text-6xl mb-4">‚è≥</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Order Pending</h1>
        <p class="text-gray-600">Awaiting payment</p>
      <% else %>
        <div class="text-6xl mb-4">‚ùå</div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Order <%= @order_group.status.titleize %></h1>
      <% end %>
    </div>

    <!-- Order Details -->
    <div class="border-t border-b py-6 space-y-4">
      <div class="flex justify-between">
        <span class="text-gray-600">Order Group Number:</span>
        <span class="font-medium">#<%= @order_group.id %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Date:</span>
        <span class="font-medium"><%= @order_group.created_at.strftime("%B %d, %Y at %H:%M") %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Producers:</span>
        <span class="font-medium"><%= @order_group.producers_count %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-600">Status:</span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= @order_group.paid? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
          <%= @order_group.status.upcase %>
        </span>
      </div>
    </div>

    <!-- Orders by Producer -->
    <div class="py-6 border-b">
      <h2 class="font-semibold text-gray-900 mb-4">Orders by Producer</h2>
      <div class="space-y-6">
        <% @orders_by_producer.each do |producer, orders| %>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-medium text-gray-900">üåæ <%= producer.name %></h3>
                <p class="text-sm text-gray-500"><%= producer.email %></p>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-600">Receives</p>
                <p class="font-semibold text-green-600"><%= number_to_currency(orders.sum(&:producer_amount), unit: "‚Ç¨") %></p>
              </div>
            </div>
            <div class="space-y-2">
              <% orders.each do |order| %>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-700">
                    <%= order.product.name %> √ó <%= order.quantity %>
                  </span>
                  <span class="font-medium"><%= order.formatted_total %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Payment Breakdown -->
    <div class="py-6 border-b">
      <h2 class="font-semibold text-gray-900 mb-4">Payment Breakdown</h2>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-gray-600">Total Items:</span>
          <span class="font-medium"><%= @order_group.orders.sum(:quantity) %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Subtotal:</span>
          <span class="font-medium"><%= @order_group.formatted_total %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Platform Fee (10%):</span>
          <span class="font-medium"><%= @order_group.formatted_platform_fee %></span>
        </div>
        <% @orders_by_producer.each do |producer, orders| %>
          <div class="flex justify-between">
            <span class="text-gray-600"><%= producer.name %> receives:</span>
            <span class="font-medium text-green-600"><%= number_to_currency(orders.sum(&:producer_amount), unit: "‚Ç¨") %></span>
          </div>
        <% end %>
        <div class="border-t pt-2 flex justify-between font-bold text-lg">
          <span>Total Paid:</span>
          <span class="text-green-600"><%= @order_group.formatted_total %></span>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 space-y-3">
      <% if @order_group.pending? %>
        <%= link_to "Complete Payment", payment_checkout_path, class: "block w-full text-center px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700" %>
      <% end %>
      <%= link_to "View All Orders", order_groups_path, class: "block w-full text-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50" %>
      <%= link_to "Continue Shopping", products_path, class: "block w-full text-center px-6 py-3 text-gray-600 hover:text-gray-900" %>
    </div>
  </div>

  <% if @order_group.paid? || @order_group.completed? %>
    <div class="mt-6 bg-green-50 border border-green-200 rounded-lg p-4">
      <h3 class="font-semibold text-green-900 mb-2">‚ú® Multi-Producer Split Completed!</h3>
      <div class="text-sm text-green-800 space-y-1">
        <% @orders_by_producer.each do |producer, orders| %>
          <p>‚Ä¢ <%= number_to_currency(orders.sum(&:producer_amount), unit: "‚Ç¨") %> transferred to <%= producer.name %>'s Stripe account</p>
        <% end %>
        <p>‚Ä¢ <%= @order_group.formatted_platform_fee %> kept as platform commission</p>
        <p class="text-xs mt-2 text-green-600">All done automatically by Stripe Connect! üéâ</p>
      </div>
    </div>
  <% end %>
</div>
