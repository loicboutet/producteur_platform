<div class="space-y-6">
  <div class="bg-white shadow rounded-lg p-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @producer.name %></h1>
        <p class="text-gray-600"><%= @producer.email %></p>
      </div>
      <div>
        <% if @producer.can_receive_payments? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            âœ“ Verified Seller
          </span>
        <% else %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            â³ Setup Pending
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Products from <%= @producer.name %></h2>
    
    <% if @products.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
            <div class="bg-gradient-to-r from-green-400 to-blue-500 h-40 flex items-center justify-center">
              <span class="text-5xl">ğŸŒ¾</span>
            </div>
            <div class="p-4">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                <span class="text-xl font-bold text-green-600"><%= product.formatted_price %></span>
              </div>
              <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product.description %></p>
              <div class="flex justify-between items-center mb-3">
                <span class="text-sm <%= product.stock > 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= product.stock > 0 ? "In stock: #{product.stock}" : "Out of stock" %>
                </span>
              </div>
              <div class="flex gap-2">
                <%= link_to "View", product_path(product), class: "flex-1 text-center px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-50 text-sm" %>
                <% if product.available? && product.producer.can_receive_payments? %>
                  <%= link_to "Buy", new_product_order_path(product), class: "flex-1 text-center px-3 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ğŸŒ¾</div>
        <h3 class="text-xl font-medium text-gray-900 mb-2">No products yet</h3>
        <p class="text-gray-600">This producer hasn't added any products yet.</p>
      </div>
    <% end %>
  </div>

  <%= link_to "â† Back to Products", products_path, class: "inline-block text-gray-600 hover:text-gray-900" %>
</div>
