<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">üìä Producer Dashboard</h1>
    <%= link_to "View Stripe Dashboard", stripe_dashboard_producer_path(@producer), class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700", data: { turbo: false } %>
  </div>

  <!-- Account Status -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Account Status</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <p class="text-sm text-gray-500">Stripe Status</p>
        <p class="text-lg font-medium">
          <% if @producer.stripe_account_status == "active" %>
            <span class="text-green-600">‚úì Active</span>
          <% elsif @producer.stripe_account_status == "pending" %>
            <span class="text-yellow-600">‚è≥ Pending</span>
          <% else %>
            <span class="text-red-600">‚ö† Restricted</span>
          <% end %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Can Receive Payments</p>
        <p class="text-lg font-medium">
          <%= @producer.can_receive_payments? ? "‚úì Yes" : "‚úó No" %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Total Revenue</p>
        <p class="text-lg font-medium text-green-600">‚Ç¨<%= format('%.2f', @total_revenue) %></p>
      </div>
    </div>
    
    <% unless @producer.can_receive_payments? %>
      <div class="mt-4 bg-yellow-50 border-l-4 border-yellow-400 p-4">
        <p class="text-yellow-700">
          Your Stripe account needs to be completed before you can receive payments.
          <%= link_to "Complete Setup", onboarding_refresh_producers_path, class: "font-medium underline" %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-3">
      <%= link_to "Add New Product", new_product_path, class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
      <%= link_to "View All Products", products_path, class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700" %>
      <%= link_to "View Profile", producer_path(@producer), class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  </div>

  <!-- Recent Products -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Recent Products</h2>
    <% if @products.any? %>
      <div class="space-y-3">
        <% @products.each do |product| %>
          <div class="border rounded-lg p-4 flex justify-between items-center">
            <div>
              <h3 class="font-medium text-gray-900"><%= product.name %></h3>
              <p class="text-sm text-gray-500">
                <%= product.formatted_price %> ‚Ä¢ Stock: <%= product.stock %>
              </p>
            </div>
            <%= link_to "Edit", edit_product_path(product), class: "text-blue-600 hover:text-blue-800" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No products yet. <%= link_to "Add your first product", new_product_path, class: "text-green-600 hover:text-green-800 font-medium" %></p>
    <% end %>
  </div>

  <!-- Recent Orders -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Recent Orders</h2>
    <% if @orders.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantity</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Your Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @orders.each do |order| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= order.id %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= order.product.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= order.quantity %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600"><%= order.formatted_producer_amount %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= order.paid? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= order.status %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= order.created_at.strftime("%d/%m/%Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No orders yet</p>
    <% end %>
  </div>
</div>
