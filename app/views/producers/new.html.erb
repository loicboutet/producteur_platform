<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">ðŸš€ Become a Producer</h1>
    
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            You'll be redirected to Stripe to complete your account setup. This is required to receive payments.
          </p>
        </div>
      </div>
    </div>

    <%= form_with model: @producer, url: producers_path, class: "space-y-6", data: { turbo: false } do |f| %>
      <% if @producer.errors.any? %>
        <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h2 class="font-bold mb-2"><%= pluralize(@producer.errors.count, "error") %> prohibited this producer from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @producer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Business Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "My Farm", required: true %>
      </div>

      <div>
        <%= f.label :email, "Business Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500 focus:border-green-500", placeholder: "contact@myfarm.com", required: true %>
        <p class="mt-1 text-sm text-gray-500">This email will be used for Stripe notifications</p>
      </div>

      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              <strong>Note:</strong> When you click "Continue to Stripe", you'll be redirected to Stripe's website. This may take a few seconds. Please wait and don't click multiple times.
            </p>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Continue to Stripe", class: "px-6 py-3 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 cursor-pointer disabled:bg-gray-400", id: "submit-btn" %>
        <%= link_to "Cancel", root_path, class: "text-gray-600 hover:text-gray-900" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">ðŸ’° How it works</h2>
    <div class="space-y-3 text-gray-700">
      <div class="flex items-start">
        <span class="text-green-600 font-bold mr-3">1.</span>
        <p>Create your producer profile</p>
      </div>
      <div class="flex items-start">
        <span class="text-green-600 font-bold mr-3">2.</span>
        <p>Complete Stripe verification (required for payments)</p>
      </div>
      <div class="flex items-start">
        <span class="text-green-600 font-bold mr-3">3.</span>
        <p>Add your products and start selling</p>
      </div>
      <div class="flex items-start">
        <span class="text-green-600 font-bold mr-3">4.</span>
        <p>Receive payments directly (we take 10% platform fee)</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const submitBtn = document.getElementById('submit-btn');
    
    if (form && submitBtn) {
      form.addEventListener('submit', function() {
        submitBtn.disabled = true;
        submitBtn.value = 'Redirecting to Stripe...';
        submitBtn.classList.add('bg-gray-400');
        submitBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
      });
    }
  });
</script>
