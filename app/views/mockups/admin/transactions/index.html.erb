<% content_for :title, "Transactions - Admin Silloun" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <h1 class="font-piepie text-3xl text-gray-900">TRANSACTIONS</h1>
    <p class="text-gray-600 mt-1">Historique des paiements Stripe</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-green-600">+2 345,50 €</p>
      <p class="text-sm text-gray-500">Paiements ce mois</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-red-600">-45,00 €</p>
      <p class="text-sm text-gray-500">Remboursements</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-purple-600">187,64 €</p>
      <p class="text-sm text-gray-500">Commissions perçues</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-gray-900">2 112,86 €</p>
      <p class="text-sm text-gray-500">Net producteurs</p>
    </div>
  </div>

  <!-- Transactions Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Référence</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Producteur</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Montant</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Commission</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Net producteur</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Statut</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @transactions.each do |tx| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <p class="font-medium text-gray-900 font-mono text-sm"><%= tx[:reference] %></p>
                <p class="text-xs text-gray-500"><%= tx[:order_reference] %></p>
              </td>
              <td class="px-6 py-4">
                <% if tx[:type] == "payment" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    Paiement
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700">
                    Remboursement
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= tx[:producer_name] %></td>
              <td class="px-6 py-4 text-right">
                <span class="font-medium <%= tx[:amount] < 0 ? 'text-red-600' : 'text-gray-900' %>">
                  <%= number_to_currency(tx[:amount], unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6 py-4 text-right text-purple-600 font-medium">
                <%= number_to_currency(tx[:commission], unit: "€", format: "%n %u") %>
              </td>
              <td class="px-6 py-4 text-right text-gray-900 font-medium">
                <%= number_to_currency(tx[:producer_amount], unit: "€", format: "%n %u") %>
              </td>
              <td class="px-6 py-4 text-center">
                <% if tx[:status] == "completed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    Complété
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">
                    En cours
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right">
                <%= link_to mockups_admin_transaction_path(tx[:id]), class: "p-2 text-gray-600 hover:text-purple-600 hover:bg-purple-50 rounded-lg inline-block" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
