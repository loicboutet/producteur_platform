<% content_for :title, "#{@user[:name]} - Admin Silloun" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <div class="flex items-center space-x-2 text-sm">
    <%= link_to "Utilisateurs", mockups_admin_users_path, class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium"><%= @user[:name] %></span>
  </div>

  <!-- User Header -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex flex-col md:flex-row md:items-start gap-6">
      <div class="w-20 h-20 rounded-full flex items-center justify-center flex-shrink-0 <%= @user[:role] == 'admin' ? 'bg-purple-600' : 'bg-gray-200' %>">
        <span class="font-bold text-2xl <%= @user[:role] == 'admin' ? 'text-white' : 'text-gray-600' %>">
          <%= @user[:name].split.map(&:first).join.upcase %>
        </span>
      </div>
      
      <div class="flex-1">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="font-piepie text-2xl text-gray-900"><%= @user[:name] %></h1>
            <p class="text-gray-600"><%= @user[:email] %></p>
          </div>
          <%= link_to edit_mockups_admin_user_path(@user[:id]), class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition" do %>
            Modifier
          <% end %>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
          <div>
            <p class="text-sm text-gray-500">Rôle</p>
            <p class="font-medium text-gray-900"><%= @user[:role] == 'admin' ? 'Administrateur' : 'Client' %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Inscrit le</p>
            <p class="font-medium text-gray-900"><%= @user[:created_at].strftime("%d/%m/%Y") %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Dernière connexion</p>
            <p class="font-medium text-gray-900"><%= time_ago_in_words(@user[:last_sign_in]) %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Total dépensé</p>
            <p class="font-medium text-gray-900"><%= number_to_currency(@user[:total_spent], unit: "€", format: "%n %u") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-gray-900"><%= @user[:orders_count] %></p>
      <p class="text-sm text-gray-500">Commandes passées</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@user[:total_spent], unit: "€", format: "%n %u") %></p>
      <p class="text-sm text-gray-500">Total dépensé</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-gray-900"><%= @user[:orders_count] > 0 ? number_to_currency(@user[:total_spent] / @user[:orders_count], unit: "€", format: "%n %u") : '-' %></p>
      <p class="text-sm text-gray-500">Panier moyen</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-2xl font-bold text-gray-900"><%= time_ago_in_words(@user[:last_sign_in]) %></p>
      <p class="text-sm text-gray-500">Dernière activité</p>
    </div>
  </div>

  <!-- Recent Orders -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <h2 class="font-semibold text-gray-900">Historique des commandes</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <% @recent_orders.each do |order| %>
        <div class="p-4 hover:bg-gray-50">
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium text-gray-900"><%= order[:reference] %></p>
              <p class="text-sm text-gray-500"><%= order[:producer_name] %></p>
            </div>
            <div class="text-right">
              <p class="font-medium text-gray-900"><%= number_to_currency(order[:total], unit: "€", format: "%n %u") %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(order[:created_at]) %></p>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if @recent_orders.empty? %>
        <div class="p-8 text-center text-gray-500">
          Aucune commande pour cet utilisateur
        </div>
      <% end %>
    </div>
  </div>
</div>
