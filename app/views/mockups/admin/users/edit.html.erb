<% content_for :title, "Modifier #{@user[:name]} - Admin Silloun" %>

<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <div class="flex items-center space-x-2 text-sm">
    <%= link_to "Utilisateurs", mockups_admin_users_path, class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <%= link_to @user[:name], mockups_admin_user_path(@user[:id]), class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium">Modifier</span>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <h1 class="font-piepie text-2xl text-gray-900">MODIFIER L'UTILISATEUR</h1>
    </div>

    <form class="p-6 space-y-6">
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
          <input type="text" value="<%= @user[:name] %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" value="<%= @user[:email] %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">RÃ´le</label>
        <div class="flex gap-3">
          <label class="flex items-center px-4 py-2 border rounded-lg cursor-pointer <%= @user[:role] == 'customer' ? 'border-purple-500 bg-purple-50' : 'border-gray-300' %>">
            <input type="radio" name="role" value="customer" <%= @user[:role] == 'customer' ? 'checked' : '' %> class="mr-2">
            <span class="text-sm font-medium">Client</span>
          </label>
          <label class="flex items-center px-4 py-2 border rounded-lg cursor-pointer <%= @user[:role] == 'admin' ? 'border-purple-500 bg-purple-50' : 'border-gray-300' %>">
            <input type="radio" name="role" value="admin" <%= @user[:role] == 'admin' ? 'checked' : '' %> class="mr-2">
            <span class="text-sm font-medium">Administrateur</span>
          </label>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-100">
        <%= link_to "Annuler", mockups_admin_user_path(@user[:id]), class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
        <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium">
          Enregistrer
        </button>
      </div>
    </form>
  </div>
</div>
