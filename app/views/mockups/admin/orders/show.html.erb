<% content_for :title, "Commande #{@order[:reference]} - Admin Silloun" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <div class="flex items-center space-x-2 text-sm">
    <%= link_to "Commandes", mockups_admin_orders_path, class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium"><%= @order[:reference] %></span>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Order Header -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h1 class="font-piepie text-2xl text-gray-900"><%= @order[:reference] %></h1>
            <p class="text-gray-500"><%= @order[:created_at].strftime("%d/%m/%Y Ã  %H:%M") %></p>
          </div>
          <% status_styles = {
            "new" => "bg-blue-100 text-blue-700",
            "paid" => "bg-green-100 text-green-700",
            "ready" => "bg-orange-100 text-orange-700",
            "picked_up" => "bg-gray-100 text-gray-700"
          } %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= status_styles[@order[:status]] %>">
            <%= @order[:status].humanize %>
          </span>
        </div>

        <!-- Timeline -->
        <div class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100">
          <% steps = [
            { key: "new", label: "Nouvelle" },
            { key: "paid", label: "PayÃ©e" },
            { key: "ready", label: "PrÃªte" },
            { key: "picked_up", label: "RetirÃ©e" }
          ] %>
          <% current_index = steps.index { |s| s[:key] == @order[:status] } || 0 %>
          <% steps.each_with_index do |step, index| %>
            <div class="flex flex-col items-center flex-1">
              <div class="w-8 h-8 rounded-full flex items-center justify-center <%= index <= current_index ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-500' %>">
                <% if index < current_index %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                <% else %>
                  <%= index + 1 %>
                <% end %>
              </div>
              <span class="text-xs text-gray-500 mt-1"><%= step[:label] %></span>
            </div>
            <% unless index == steps.length - 1 %>
              <div class="flex-1 h-0.5 <%= index < current_index ? 'bg-purple-600' : 'bg-gray-200' %> mx-2 mb-6"></div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Order Items -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-semibold text-gray-900">Articles commandÃ©s</h2>
        </div>
        <div class="divide-y divide-gray-100">
          <% @order_items.each do |item| %>
            <div class="p-4 flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">ðŸ¥¬</div>
                <div>
                  <p class="font-medium text-gray-900"><%= item[:name] %></p>
                  <p class="text-sm text-gray-500"><%= item[:quantity] %> <%= item[:unit] %> Ã— <%= number_to_currency(item[:price], unit: "â‚¬", format: "%n %u") %></p>
                </div>
              </div>
              <p class="font-medium text-gray-900"><%= number_to_currency(item[:subtotal], unit: "â‚¬", format: "%n %u") %></p>
            </div>
          <% end %>
        </div>
        <div class="p-4 bg-gray-50">
          <div class="flex justify-between text-sm mb-2">
            <span class="text-gray-500">Sous-total</span>
            <span class="text-gray-900"><%= number_to_currency(@order[:total], unit: "â‚¬", format: "%n %u") %></span>
          </div>
          <div class="flex justify-between text-sm mb-2">
            <span class="text-gray-500">Commission (<%= ((@order[:commission] / @order[:total]) * 100).round(1) %>%)</span>
            <span class="text-purple-600"><%= number_to_currency(@order[:commission], unit: "â‚¬", format: "%n %u") %></span>
          </div>
          <div class="flex justify-between font-bold pt-2 border-t border-gray-200">
            <span>Total</span>
            <span><%= number_to_currency(@order[:total], unit: "â‚¬", format: "%n %u") %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Client -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Client</h3>
        <p class="font-medium text-gray-900"><%= @order[:customer_name] %></p>
        <p class="text-sm text-gray-500"><%= @order[:customer_email] %></p>
      </div>

      <!-- Producer -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Producteur</h3>
        <p class="font-medium text-gray-900"><%= @order[:producer_name] %></p>
        <%= link_to "Voir le profil â†’", mockups_admin_producer_path(1), class: "text-sm text-purple-600 hover:text-purple-700" %>
      </div>

      <!-- Pickup Point -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Point de retrait</h3>
        <div class="flex items-center space-x-2 mb-2">
          <span class="inline-block px-2 py-0.5 bg-silloun-yellow text-silloun-green text-xs font-medium rounded">
            <%= @order[:pickup_type] == "farm" ? "Ferme" : "MarchÃ©" %>
          </span>
        </div>
        <p class="text-sm text-gray-600">
          <%= @order[:pickup_type] == "farm" ? "Ã€ la ferme du producteur" : "Sur le marchÃ©" %>
        </p>
      </div>

      <!-- Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Actions</h3>
        <div class="space-y-2">
          <button class="w-full px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition text-sm font-medium">
            Rembourser la commande
          </button>
          <button class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition text-sm font-medium">
            Contacter le client
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
