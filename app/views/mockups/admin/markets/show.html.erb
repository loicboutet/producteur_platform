<% content_for :title, "#{@market[:name]} - Admin Silloun" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="flex items-center space-x-2 text-sm">
      <%= link_to "Marchés", mockups_admin_markets_path, class: "text-purple-600 hover:text-purple-700" %>
      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-900 font-medium"><%= @market[:name] %></span>
    </div>
    <%= link_to edit_mockups_admin_market_path(@market[:id]), class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition font-medium" do %>
      Modifier
    <% end %>
  </div>

  <!-- Market Info -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Map -->
      <div class="lg:w-1/3 h-48 lg:h-auto bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg flex items-center justify-center">
        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      
      <!-- Details -->
      <div class="flex-1">
        <div class="flex items-start justify-between mb-4">
          <h1 class="font-piepie text-2xl text-gray-900"><%= @market[:name] %></h1>
          <% if @market[:active] %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-700">Actif</span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700">Inactif</span>
          <% end %>
        </div>
        
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-500">Adresse</p>
            <p class="font-medium text-gray-900"><%= @market[:address] %></p>
            <p class="text-gray-600"><%= @market[:postal_code] %> <%= @market[:city] %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Jours et horaires</p>
            <div class="flex flex-wrap gap-1 mt-1">
              <% @market[:days].each do |day| %>
                <span class="inline-block px-2 py-0.5 bg-silloun-yellow text-silloun-green text-sm font-medium rounded"><%= day %></span>
              <% end %>
            </div>
            <p class="text-gray-900 mt-1"><%= @market[:hours] %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Coordonnées GPS</p>
            <p class="font-mono text-sm text-gray-900"><%= @market[:latitude] %>, <%= @market[:longitude] %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Producteurs inscrits</p>
            <p class="font-medium text-gray-900"><%= @market[:producers_count] %> producteurs</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Producers on this market -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <h2 class="font-semibold text-gray-900">Producteurs présents sur ce marché</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <% @producers.each do |producer| %>
        <div class="p-4 hover:bg-gray-50">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-silloun-green rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= producer[:name].split.map(&:first).join.upcase %></span>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= producer[:farm_name] %></p>
                <p class="text-sm text-gray-500"><%= producer[:name] %></p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500"><%= producer[:products_count] %> produits</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
