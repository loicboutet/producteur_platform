<% content_for :title, "Nouveau marché - Admin Silloun" %>

<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <div class="flex items-center space-x-2 text-sm">
    <%= link_to "Marchés", mockups_admin_markets_path, class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium">Nouveau marché</span>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <h1 class="font-piepie text-2xl text-gray-900">NOUVEAU MARCHÉ</h1>
    </div>

    <form class="p-6 space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nom du marché *</label>
        <input type="text" placeholder="Ex: Marché de Limoges" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" required>
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Adresse *</label>
          <input type="text" placeholder="Place de la Motte" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Ville *</label>
          <input type="text" placeholder="Limoges" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" required>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Code postal *</label>
          <input type="text" placeholder="87000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Horaires</label>
          <input type="text" placeholder="8h00 - 13h00" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Jours de marché *</label>
        <div class="flex flex-wrap gap-2">
          <% %w[Lundi Mardi Mercredi Jeudi Vendredi Samedi Dimanche].each do |day| %>
            <label class="flex items-center px-3 py-2 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="checkbox" name="days[]" value="<%= day %>" class="mr-2 text-purple-600 focus:ring-purple-500">
              <span class="text-sm"><%= day %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Latitude</label>
          <input type="text" placeholder="45.8336" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 font-mono">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Longitude</label>
          <input type="text" placeholder="1.2611" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 font-mono">
        </div>
      </div>

      <div>
        <label class="flex items-center">
          <input type="checkbox" checked class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
          <span class="ml-2 text-sm text-gray-700">Marché actif</span>
        </label>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-100">
        <%= link_to "Annuler", mockups_admin_markets_path, class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
        <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium">
          Créer le marché
        </button>
      </div>
    </form>
  </div>
</div>
