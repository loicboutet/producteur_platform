<% content_for :title, "Marchés - Admin Silloun" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
    <div>
      <h1 class="font-piepie text-3xl text-gray-900">MARCHÉS</h1>
      <p class="text-gray-600 mt-1">Gérez les marchés disponibles sur la plateforme</p>
    </div>
    <%= link_to new_mockups_admin_market_path, class: "mt-4 md:mt-0 inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Nouveau marché
    <% end %>
  </div>

  <!-- Markets Grid -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @markets.each do |market| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition">
        <!-- Map placeholder -->
        <div class="h-32 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        
        <div class="p-4">
          <div class="flex items-start justify-between mb-2">
            <h3 class="font-semibold text-gray-900"><%= market[:name] %></h3>
            <% if market[:active] %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Actif</span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">Inactif</span>
            <% end %>
          </div>
          
          <p class="text-sm text-gray-500 mb-3"><%= market[:address] %>, <%= market[:postal_code] %> <%= market[:city] %></p>
          
          <div class="flex flex-wrap gap-1 mb-3">
            <% market[:days].each do |day| %>
              <span class="inline-block px-2 py-0.5 bg-silloun-yellow text-silloun-green text-xs font-medium rounded"><%= day %></span>
            <% end %>
            <span class="text-xs text-gray-500 ml-1"><%= market[:hours] %></span>
          </div>
          
          <div class="flex items-center justify-between pt-3 border-t border-gray-100">
            <span class="text-sm text-gray-500">
              <span class="font-medium text-gray-900"><%= market[:producers_count] %></span> producteurs
            </span>
            <div class="flex items-center space-x-2">
              <%= link_to mockups_admin_market_path(market[:id]), class: "p-1.5 text-gray-600 hover:text-purple-600 hover:bg-purple-50 rounded-lg" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              <% end %>
              <%= link_to edit_mockups_admin_market_path(market[:id]), class: "p-1.5 text-gray-600 hover:text-purple-600 hover:bg-purple-50 rounded-lg" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
