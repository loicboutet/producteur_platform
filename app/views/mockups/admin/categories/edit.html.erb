<% content_for :title, "Modifier #{@category[:name]} - Admin Silloun" %>

<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <div class="flex items-center space-x-2 text-sm">
    <%= link_to "Catégories", mockups_admin_categories_path, class: "text-purple-600 hover:text-purple-700" %>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
    <span class="text-gray-900 font-medium">Modifier <%= @category[:name] %></span>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <h1 class="font-piepie text-2xl text-gray-900">MODIFIER LA CATÉGORIE</h1>
    </div>

    <form class="p-6 space-y-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nom de la catégorie *</label>
        <input type="text" value="<%= @category[:name] %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500" required>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Slug</label>
        <input type="text" value="<%= @category[:slug] %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 font-mono">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Icône (emoji)</label>
        <input type="text" value="<%= @category[:icon] %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 text-2xl">
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Position</label>
        <input type="number" value="<%= @category[:position] %>" min="1" class="w-32 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
      </div>

      <div>
        <label class="flex items-center">
          <input type="checkbox" <%= @category[:active] ? 'checked' : '' %> class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
          <span class="ml-2 text-sm text-gray-700">Catégorie active</span>
        </label>
      </div>

      <div class="flex items-center justify-between pt-6 border-t border-gray-100">
        <button type="button" class="text-red-600 hover:text-red-700 text-sm font-medium">
          Supprimer la catégorie
        </button>
        <div class="flex items-center space-x-3">
          <%= link_to "Annuler", mockups_admin_categories_path, class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50" %>
          <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium">
            Enregistrer
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
