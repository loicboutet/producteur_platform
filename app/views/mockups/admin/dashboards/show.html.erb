<% content_for :title, "Dashboard Admin - Silloun" %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
    <div>
      <h1 class="font-piepie text-3xl text-gray-900">DASHBOARD</h1>
      <p class="text-gray-600 mt-1">Vue d'ensemble de la plateforme Silloun</p>
    </div>
    <div class="mt-4 md:mt-0 flex items-center space-x-3">
      <span class="text-sm text-gray-500">Dernière mise à jour : <%= Time.current.strftime("%d/%m/%Y à %H:%M") %></span>
      <button class="p-2 bg-white rounded-lg border hover:bg-gray-50 transition">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Revenue Card -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div class="p-3 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <span class="text-green-600 text-sm font-medium flex items-center">
          +12.5%
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </span>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@stats[:monthly_revenue], unit: "€", format: "%n %u") %></p>
        <p class="text-sm text-gray-500">CA ce mois</p>
      </div>
    </div>

    <!-- Orders Card -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div class="p-3 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </div>
        <span class="text-blue-600 text-sm font-medium flex items-center">
          +8.2%
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </span>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_orders] %></p>
        <p class="text-sm text-gray-500">Commandes totales</p>
      </div>
    </div>

    <!-- Producers Card -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div class="p-3 bg-orange-100 rounded-lg">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
          </svg>
        </div>
        <% if @stats[:pending_producers] > 0 %>
          <span class="bg-orange-500 text-white text-xs px-2 py-1 rounded-full font-bold">
            <%= @stats[:pending_producers] %> en attente
          </span>
        <% end %>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_producers] %></p>
        <p class="text-sm text-gray-500">Producteurs actifs</p>
      </div>
    </div>

    <!-- Commission Card -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div class="p-3 bg-purple-100 rounded-lg">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
        </div>
        <span class="text-purple-600 text-sm font-medium">
          <%= @stats[:commission_rate] %>%
        </span>
      </div>
      <div class="mt-4">
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@stats[:commission_earned], unit: "€", format: "%n %u") %></p>
        <p class="text-sm text-gray-500">Commissions perçues</p>
      </div>
    </div>
  </div>

  <!-- Alerts Section -->
  <% if @pending_producers.any? %>
    <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-semibold text-orange-800">Producteurs en attente de validation</h3>
          <p class="text-sm text-orange-700 mt-1">
            <%= @pending_producers.count %> producteur(s) ont demandé à rejoindre la plateforme et attendent votre validation.
          </p>
          <div class="mt-3">
            <%= link_to "Voir les demandes →", mockups_admin_producers_path(status: "pending"), class: "text-sm font-semibold text-orange-800 hover:text-orange-900" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Grid -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Recent Orders -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-100">
          <div class="flex items-center justify-between">
            <h2 class="font-semibold text-gray-900">Commandes récentes</h2>
            <%= link_to "Voir tout →", mockups_admin_orders_path, class: "text-sm text-purple-600 hover:text-purple-700" %>
          </div>
        </div>
        <div class="divide-y divide-gray-100">
          <% @recent_orders.each do |order| %>
            <div class="p-4 hover:bg-gray-50 transition">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <% status_colors = {
                      "new" => "bg-blue-100 text-blue-700",
                      "paid" => "bg-green-100 text-green-700",
                      "ready" => "bg-orange-100 text-orange-700",
                      "picked_up" => "bg-gray-100 text-gray-700"
                    } %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[order[:status]] %>">
                      <%= order[:status].humanize %>
                    </span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900"><%= order[:reference] %></p>
                    <p class="text-sm text-gray-500"><%= order[:customer_name] %> • <%= order[:producer_name] %></p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-gray-900"><%= number_to_currency(order[:total], unit: "€", format: "%n %u") %></p>
                  <p class="text-xs text-gray-500"><%= time_ago_in_words(order[:created_at]) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Pending Producers -->
    <div>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-100">
          <div class="flex items-center justify-between">
            <h2 class="font-semibold text-gray-900">Validations en attente</h2>
            <%= link_to "Voir tout →", mockups_admin_producers_path, class: "text-sm text-purple-600 hover:text-purple-700" %>
          </div>
        </div>
        <div class="divide-y divide-gray-100">
          <% @pending_producers.each do |producer| %>
            <div class="p-4">
              <div class="flex items-start space-x-3">
                <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-orange-600 font-semibold text-sm"><%= producer[:name].split.map(&:first).join.upcase %></span>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-medium text-gray-900 truncate"><%= producer[:farm_name] %></p>
                  <p class="text-sm text-gray-500"><%= producer[:name] %></p>
                  <p class="text-xs text-gray-400 mt-1"><%= producer[:city] %> • Inscrit <%= time_ago_in_words(producer[:created_at]) %></p>
                </div>
              </div>
              <div class="mt-3 flex space-x-2">
                <%= link_to mockups_admin_producer_path(producer[:id]), class: "flex-1 text-center text-sm bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition" do %>
                  Examiner
                <% end %>
              </div>
            </div>
          <% end %>
          
          <% if @pending_producers.empty? %>
            <div class="p-6 text-center">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <p class="text-gray-500 text-sm">Aucune validation en attente</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="mt-6 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-semibold text-gray-900 mb-4">Statistiques rapides</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Utilisateurs totaux</span>
            <span class="font-semibold text-gray-900"><%= @stats[:total_users] %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Produits en ligne</span>
            <span class="font-semibold text-gray-900"><%= @stats[:total_products] %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">Commandes en cours</span>
            <span class="font-semibold text-gray-900"><%= @stats[:pending_orders] %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-600">CA total plateforme</span>
            <span class="font-semibold text-gray-900"><%= number_to_currency(@stats[:total_revenue], unit: "€", format: "%n %u") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Transactions -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="p-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h2 class="font-semibold text-gray-900">Transactions récentes</h2>
        <%= link_to "Voir tout →", mockups_admin_transactions_path, class: "text-sm text-purple-600 hover:text-purple-700" %>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Référence</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producteur</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Commission</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @recent_transactions.each do |tx| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <p class="text-sm font-medium text-gray-900"><%= tx[:reference] %></p>
                <p class="text-xs text-gray-500"><%= tx[:order_reference] %></p>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if tx[:type] == "payment" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    Paiement
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700">
                    Remboursement
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= tx[:producer_name] %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <span class="text-sm font-medium <%= tx[:amount] < 0 ? 'text-red-600' : 'text-gray-900' %>">
                  <%= number_to_currency(tx[:amount], unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <span class="text-sm text-purple-600 font-medium">
                  <%= number_to_currency(tx[:commission], unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if tx[:status] == "completed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                    Complété
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">
                    En cours
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
