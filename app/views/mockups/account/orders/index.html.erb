<% content_for(:title, "Mes Commandes - Silloun") %>

<div class="max-w-4xl">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="font-piepie text-silloun-green text-2xl">MES COMMANDES</h1>
    <p class="text-gray-500">Historique de toutes vos commandes</p>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm p-4 mb-6 flex flex-wrap gap-4 items-center justify-between">
    <div class="flex flex-wrap gap-2">
      <button class="px-4 py-2 rounded-full bg-silloun-green text-white text-sm font-medium">
        Toutes
      </button>
      <button class="px-4 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-medium hover:bg-gray-200">
        √Ä retirer
      </button>
      <button class="px-4 py-2 rounded-full bg-gray-100 text-gray-600 text-sm font-medium hover:bg-gray-200">
        Retir√©es
      </button>
    </div>
    
    <div class="text-sm text-gray-500">
      <span class="font-semibold text-silloun-green"><%= @orders.size %></span> commande(s)
    </div>
  </div>

  <!-- Orders List -->
  <div class="space-y-4">
    <% @orders.each do |order| %>
      <%= link_to mockups_account_order_path(order[:id]), class: "block bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden" do %>
        <!-- Order Header -->
        <div class="px-6 py-4 border-b border-gray-100 flex flex-wrap items-center justify-between gap-4">
          <div>
            <div class="flex items-center gap-3">
              <p class="font-semibold text-gray-800"><%= order[:reference] %></p>
              <span class="px-3 py-1 rounded-full text-xs font-semibold
                          <%= order[:status] == 'ready' ? 'bg-silloun-yellow text-silloun-green' : 'bg-gray-100 text-gray-600' %>">
                <%= order[:status_label] %>
              </span>
            </div>
            <p class="text-gray-500 text-sm mt-1">
              Command√© <%= time_ago_in_words(order[:created_at]) %>
            </p>
          </div>
          
          <div class="text-right">
            <p class="font-piepie text-silloun-green text-xl"><%= number_to_currency(order[:total], unit: "‚Ç¨", format: "%n %u") %></p>
            <p class="text-gray-400 text-xs"><%= order[:items_count] %> articles</p>
          </div>
        </div>
        
        <!-- Order Body -->
        <div class="px-6 py-4 flex flex-col md:flex-row md:items-center gap-4">
          <!-- Producer Info -->
          <div class="flex items-center gap-3 flex-1">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-xl">üë®‚Äçüåæ</span>
            </div>
            <div>
              <p class="font-medium text-gray-800"><%= order[:producer][:farm_name] %></p>
              <p class="text-gray-500 text-sm flex items-center">
                <% if order[:pickup_point][:type] == "farm" %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                <% end %>
                <%= order[:pickup_point][:name] %>
              </p>
            </div>
          </div>
          
          <!-- Action -->
          <div class="flex items-center text-silloun-green font-medium">
            Voir le d√©tail
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>
        
        <!-- Ready to pickup banner -->
        <% if order[:status] == 'ready' %>
          <div class="bg-silloun-yellow/20 px-6 py-3 flex items-center gap-2 text-silloun-green">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium">Cette commande est pr√™te √† √™tre retir√©e</span>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

