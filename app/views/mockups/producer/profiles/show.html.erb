<% content_for(:title, "Mon profil - Espace Producteur") %>

<!-- Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
  <div>
    <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green mb-2">MON PROFIL</h1>
    <p class="text-gray-600">Gérez les informations de votre ferme</p>
  </div>
  <%= link_to edit_mockups_producer_profile_path, class: "btn-silloun-primary mt-4 md:mt-0 inline-flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
    </svg>
    Modifier le profil
  <% end %>
</div>

<div class="grid lg:grid-cols-3 gap-8">
  <!-- Main Info -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Farm Info Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100">
        <h2 class="font-piepie text-xl text-silloun-green">INFORMATIONS DE LA FERME</h2>
      </div>
      <div class="p-6">
        <div class="flex flex-col md:flex-row gap-6">
          <!-- Photo -->
          <div class="flex-shrink-0">
            <div class="relative">
              <div class="w-32 h-32 rounded-xl overflow-hidden border-4 border-silloun-yellow">
                <%= image_tag @producer[:photo], alt: @producer[:farm_name], class: "w-full h-full object-cover" %>
              </div>
              <% if @producer[:verified] %>
                <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              <% end %>
            </div>
          </div>
          
          <!-- Details -->
          <div class="flex-1">
            <h3 class="font-piepie text-2xl text-silloun-green mb-1"><%= @producer[:farm_name].upcase %></h3>
            <p class="text-gray-600 mb-4"><%= @producer[:short_description] %></p>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <p class="text-sm text-gray-500">Producteur</p>
                <p class="font-medium text-gray-800"><%= @producer[:first_name] %> <%= @producer[:last_name] %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Membre depuis</p>
                <p class="font-medium text-gray-800"><%= @producer[:created_at].strftime("%B %Y") %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">SIRET</p>
                <p class="font-medium text-gray-800"><%= @producer[:siret] %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Statut</p>
                <% if @producer[:verified] %>
                  <p class="inline-flex items-center text-green-600 font-medium">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Vérifié
                  </p>
                <% else %>
                  <p class="inline-flex items-center text-orange-600 font-medium">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                    </svg>
                    En attente
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="mt-6 pt-6 border-t border-gray-100">
          <h4 class="font-semibold text-gray-800 mb-2">À propos de la ferme</h4>
          <p class="text-gray-600"><%= @producer[:description] %></p>
        </div>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100">
        <h2 class="font-piepie text-xl text-silloun-green">COORDONNÉES</h2>
      </div>
      <div class="p-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div class="flex items-start">
            <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500">Email</p>
              <p class="font-medium text-gray-800"><%= @producer[:email] %></p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500">Téléphone</p>
              <p class="font-medium text-gray-800"><%= @producer[:phone] %></p>
            </div>
          </div>
          
          <div class="flex items-start md:col-span-2">
            <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500">Adresse</p>
              <p class="font-medium text-gray-800">
                <%= @producer[:address] %><br>
                <%= @producer[:postal_code] %> <%= @producer[:city] %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pickup Points Summary -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100 flex items-center justify-between">
        <h2 class="font-piepie text-xl text-silloun-green">POINTS DE RETRAIT</h2>
        <%= link_to mockups_producer_pickup_points_path, class: "text-silloun-green hover:underline text-sm font-medium" do %>
          Gérer
          <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <!-- Farm Pickup -->
          <% @pickup_points.each do |point| %>
            <div class="flex items-start p-4 bg-gray-50 rounded-lg">
              <div class="w-10 h-10 bg-silloun-green rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <h4 class="font-semibold text-gray-800"><%= point[:name] %></h4>
                  <% if point[:active] %>
                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">Actif</span>
                  <% else %>
                    <span class="bg-gray-100 text-gray-600 text-xs font-medium px-2 py-1 rounded-full">Inactif</span>
                  <% end %>
                </div>
                <p class="text-sm text-gray-600 mt-1"><%= point[:address] %>, <%= point[:postal_code] %> <%= point[:city] %></p>
                <p class="text-sm text-gray-500 mt-2">
                  <% days_open = point[:schedules].map { |s| s[:day] }.uniq %>
                  <%= days_open.join(", ") %>
                </p>
              </div>
            </div>
          <% end %>

          <!-- Markets -->
          <% @market_presences.each do |presence| %>
            <div class="flex items-start p-4 bg-gray-50 rounded-lg">
              <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <h4 class="font-semibold text-gray-800"><%= presence[:market][:name] %></h4>
                  <% if presence[:active] %>
                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">Actif</span>
                  <% else %>
                    <span class="bg-gray-100 text-gray-600 text-xs font-medium px-2 py-1 rounded-full">Inactif</span>
                  <% end %>
                </div>
                <p class="text-sm text-gray-600 mt-1"><%= presence[:market][:address] %>, <%= presence[:market][:city] %></p>
                <p class="text-sm text-gray-500 mt-2">
                  <%= presence[:day] %> • <%= presence[:start_time] %> - <%= presence[:end_time] %>
                  <% if presence[:stand_number].present? %>
                    • Stand <%= presence[:stand_number] %>
                  <% end %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Stats Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="font-piepie text-lg text-silloun-green mb-4">MES CHIFFRES</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Produits</span>
          <span class="font-bold text-gray-900"><%= @producer[:products_count] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Commandes totales</span>
          <span class="font-bold text-gray-900"><%= @producer[:orders_count] %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">CA total</span>
          <span class="font-bold text-silloun-green"><%= number_to_currency(@producer[:total_revenue], unit: "€", format: "%n %u") %></span>
        </div>
      </div>
    </div>

    <!-- Stripe Status -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="font-piepie text-lg text-silloun-green mb-4">PAIEMENTS</h3>
      <% if @producer[:stripe_connected] %>
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div>
            <p class="font-semibold text-green-600">Compte connecté</p>
            <p class="text-sm text-gray-500">Stripe Connect actif</p>
          </div>
        </div>
        <%= link_to mockups_producer_stripe_path, class: "btn-silloun-outline w-full text-center" do %>
          Gérer les paiements
        <% end %>
      <% else %>
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div>
            <p class="font-semibold text-orange-600">Non configuré</p>
            <p class="text-sm text-gray-500">Configurez vos paiements</p>
          </div>
        </div>
        <%= link_to connect_mockups_producer_stripe_path, class: "btn-silloun-primary w-full text-center" do %>
          Connecter Stripe
        <% end %>
      <% end %>
    </div>

    <!-- Public Page Link -->
    <div class="bg-silloun-yellow rounded-xl p-6">
      <h3 class="font-piepie text-lg text-silloun-green mb-2">VOTRE PAGE PUBLIQUE</h3>
      <p class="text-sm text-silloun-green opacity-80 mb-4">Partagez votre page avec vos clients pour qu'ils puissent commander directement.</p>
      <%= link_to mockups_public_producer_path(id: @producer[:id]), class: "bg-silloun-green text-white font-bold py-2 px-4 rounded-lg inline-flex items-center hover:bg-green-800 transition w-full justify-center", target: "_blank" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        Voir ma page
      <% end %>
    </div>
  </div>
</div>
