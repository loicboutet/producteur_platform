                <%= image_tag @producer[:photo], alt: "Photo actuelle", class: "w-full h-full object-cover" %>
              </div>
              <div>
                <label class="btn-silloun-outline cursor-pointer inline-block">
                  <input type="file" class="hidden" accept="image/*">
                  Changer la photo
                </label>
                <p class="text-sm text-gray-500 mt-2">JPG, PNG ou GIF. Max 5 Mo.</p>
              </div>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <!-- Farm Name -->
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-2">Nom de la ferme *</label>
              <input type="text" name="farm_name" value="<%= @producer[:farm_name] %>" 
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green" 
                     placeholder="Ex: Ferme du Soleil">
            </div>

            <!-- Short Description -->
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-2">Slogan / Description courte</label>
              <input type="text" name="short_description" value="<%= @producer[:short_description] %>" 
