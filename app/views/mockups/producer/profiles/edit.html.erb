        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">ADRESSE DE LA FERME</h2>
        </div>
        <div class="p-6 space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Address -->
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-2">Adresse *</label>
              <input type="text" name="address" value="<%= @producer[:address] %>" 
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
            </div>

            <!-- Postal Code -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Code postal *</label>
              <input type="text" name="postal_code" value="<%= @producer[:postal_code] %>" 
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green"
                     maxlength="5">
            </div>

            <!-- City -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Ville *</label>
              <input type="text" name="city" value="<%= @producer[:city] %>" 
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
