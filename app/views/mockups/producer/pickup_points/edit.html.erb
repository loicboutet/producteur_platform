<% content_for(:title, "Modifier les horaires - Espace Producteur") %>

<!-- Header -->
<div class="mb-8">
  <div class="flex items-center mb-4">
    <%= link_to mockups_producer_pickup_points_path, class: "text-gray-500 hover:text-silloun-green transition mr-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green">MODIFIER LES HORAIRES</h1>
  </div>
  <p class="text-gray-600">Configurez vos horaires d'ouverture pour le retrait √† la ferme</p>
</div>

<%= form_with url: mockups_producer_pickup_point_path(1), method: :patch, local: true, class: "space-y-8" do |f| %>
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Form -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Location Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">INFORMATIONS</h2>
        </div>
        <div class="p-6 space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Description pour les clients</label>
            <textarea name="description" rows="3" 
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green resize-none"
                      placeholder="Informations utiles : parking, acc√®s, instructions...">Retrait directement √† la ferme. Parking disponible.</textarea>
          </div>
          
          <div class="flex items-center">
            <input type="checkbox" name="active" checked class="w-5 h-5 border-gray-300 rounded accent-green-700 mr-3">
            <span class="text-gray-700">Point de retrait actif</span>
          </div>
        </div>
      </div>

      <!-- Schedules -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">HORAIRES D'OUVERTURE</h2>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% days = [
              { name: "Lundi", slots: [{ open: "09:00", close: "12:00", active: true }] },
              { name: "Mardi", slots: [{ open: "09:00", close: "12:00", active: true }] },
              { name: "Mercredi", slots: [{ open: "09:00", close: "12:00", active: true }, { open: "14:00", close: "18:00", active: true }] },
              { name: "Jeudi", slots: [{ open: "09:00", close: "12:00", active: true }] },
              { name: "Vendredi", slots: [{ open: "09:00", close: "12:00", active: true }, { open: "14:00", close: "18:00", active: true }] },
              { name: "Samedi", slots: [{ open: "09:00", close: "12:00", active: true }] },
              { name: "Dimanche", slots: [] }
            ] %>
            
            <% days.each do |day| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-3">
                  <label class="flex items-center">
                    <input type="checkbox" <%= 'checked' if day[:slots].any? %> class="w-5 h-5 border-gray-300 rounded accent-green-700 mr-3">
                    <span class="font-medium text-gray-800"><%= day[:name] %></span>
                  </label>
                  <button type="button" class="text-silloun-green hover:text-green-700 text-sm font-medium">
                    + Ajouter un cr√©neau
                  </button>
                </div>
                
                <% if day[:slots].any? %>
                  <div class="space-y-2 ml-8">
                    <% day[:slots].each_with_index do |slot, index| %>
                      <div class="flex items-center space-x-3">
                        <input type="time" value="<%= slot[:open] %>" class="px-3 py-2 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
                        <span class="text-gray-500">√†</span>
                        <input type="time" value="<%= slot[:close] %>" class="px-3 py-2 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
                        <button type="button" class="p-2 text-red-500 hover:bg-red-50 rounded-lg transition">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                        </button>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-sm text-gray-500 ml-8">Ferm√© ce jour</p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Save Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sticky top-4">
        <h3 class="font-semibold text-gray-800 mb-4">Actions</h3>
        <div class="space-y-3">
          <button type="submit" class="btn-silloun-primary w-full">
            <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Enregistrer
          </button>
          <%= link_to "Annuler", mockups_producer_pickup_points_path, class: "btn-silloun-outline w-full text-center block" %>
        </div>
      </div>

      <!-- Tips -->
      <div class="bg-silloun-yellow rounded-xl p-6">
        <h3 class="font-semibold text-silloun-green mb-3">üí° Conseils</h3>
        <ul class="space-y-2 text-sm text-silloun-green">
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Proposez des cr√©neaux r√©guliers pour fid√©liser vos clients
          </li>
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Indiquez les instructions de parking ou d'acc√®s
          </li>
          <li class="flex items-start">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Vous pouvez ajouter plusieurs cr√©neaux par jour
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
