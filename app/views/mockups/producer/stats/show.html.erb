<% content_for(:title, "Statistiques - Espace Producteur") %>

<!-- Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
  <div>
    <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green mb-2">STATISTIQUES</h1>
    <p class="text-gray-600">Analysez les performances de votre activité</p>
  </div>
  
  <!-- Period Filter -->
  <div class="mt-4 md:mt-0">
    <select class="px-4 py-2 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green bg-white">
      <option value="7">7 derniers jours</option>
      <option value="30" selected>30 derniers jours</option>
      <option value="90">3 derniers mois</option>
      <option value="365">Cette année</option>
    </select>
  </div>
</div>

<!-- Main Stats Cards -->
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <!-- Total Revenue -->
  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-silloun-yellow rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-silloun-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <span class="text-green-600 text-sm font-medium flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
        +<%= @stats[:revenue_growth] %>%
      </span>
    </div>
    <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@stats[:this_month_revenue], unit: "€", format: "%n %u") %></p>
    <p class="text-sm text-gray-500">Ventes ce mois</p>
    <p class="text-xs text-gray-400 mt-1">vs <%= number_to_currency(@stats[:last_month_revenue], unit: "€", format: "%n %u") %> mois dernier</p>
  </div>

  <!-- Total Orders -->
  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
      </div>
      <span class="text-green-600 text-sm font-medium flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
        +<%= @stats[:orders_growth] %>%
      </span>
    </div>
    <p class="text-2xl font-bold text-gray-900"><%= @stats[:this_month_orders] %></p>
    <p class="text-sm text-gray-500">Commandes ce mois</p>
    <p class="text-xs text-gray-400 mt-1">vs <%= @stats[:last_month_orders] %> mois dernier</p>
  </div>

  <!-- Average Order -->
  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
      </div>
    </div>
    <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@stats[:average_order], unit: "€", format: "%n %u") %></p>
    <p class="text-sm text-gray-500">Panier moyen</p>
  </div>

  <!-- Customers -->
  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
    </div>
    <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_customers] %></p>
    <p class="text-sm text-gray-500">Clients uniques</p>
    <p class="text-xs text-gray-400 mt-1"><%= @stats[:returning_customers] %> clients fidèles (<%= @stats[:returning_rate] %>%)</p>
  </div>
</div>

<div class="grid lg:grid-cols-3 gap-8">
  <!-- Revenue Chart -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100">
        <h2 class="font-piepie text-xl text-silloun-green">ÉVOLUTION DU CHIFFRE D'AFFAIRES</h2>
      </div>
      <div class="p-6">
        <!-- Simple Chart Mockup -->
        <div class="h-64 flex items-end justify-between space-x-2">
          <% @stats[:monthly_revenue].each do |month| %>
            <% height = (month[:revenue] / 1300.0 * 100).to_i %>
            <div class="flex-1 flex flex-col items-center">
              <div class="w-full bg-silloun-green rounded-t-lg transition-all hover:bg-green-700" 
                   style="height: <%= height %>%"
                   title="<%= number_to_currency(month[:revenue], unit: '€', format: '%n %u') %>">
              </div>
              <span class="text-xs text-gray-500 mt-2"><%= month[:month] %></span>
            </div>
          <% end %>
        </div>
        
        <!-- Legend -->
        <div class="flex items-center justify-center mt-6 pt-4 border-t border-gray-100">
          <div class="flex items-center mr-6">
            <div class="w-3 h-3 bg-silloun-green rounded mr-2"></div>
            <span class="text-sm text-gray-600">Chiffre d'affaires mensuel</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Pickup Distribution -->
  <div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100">
        <h2 class="font-piepie text-xl text-silloun-green">POINTS DE RETRAIT</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% colors = ["bg-silloun-green", "bg-blue-500", "bg-purple-500"] %>
          <% @stats[:pickup_distribution].each_with_index do |pickup, index| %>
            <div>
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm font-medium text-gray-700"><%= pickup[:type] %></span>
                <span class="text-sm text-gray-500"><%= pickup[:count] %> commandes</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="<%= colors[index] %> h-3 rounded-full" style="width: <%= pickup[:percentage] %>%"></div>
              </div>
              <p class="text-xs text-gray-500 mt-1"><%= pickup[:percentage] %>%</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Top Products & Best Days -->
<div class="grid lg:grid-cols-2 gap-8 mt-8">
  <!-- Top Products -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="p-6 border-b border-gray-100">
      <h2 class="font-piepie text-xl text-silloun-green">TOP 5 PRODUITS</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <% @stats[:top_products].each_with_index do |product, index| %>
        <div class="p-4 flex items-center">
          <div class="w-8 h-8 rounded-full flex items-center justify-center mr-4 
                      <%= index == 0 ? 'bg-yellow-100 text-yellow-600' : 
                          index == 1 ? 'bg-gray-100 text-gray-600' : 
                          index == 2 ? 'bg-orange-100 text-orange-600' : 'bg-gray-50 text-gray-500' %>">
            <span class="font-bold text-sm"><%= index + 1 %></span>
          </div>
          <div class="flex-1">
            <p class="font-medium text-gray-800"><%= product[:name] %></p>
            <p class="text-sm text-gray-500"><%= product[:sales] %> vendus</p>
          </div>
          <div class="text-right">
            <p class="font-bold text-silloun-green"><%= number_to_currency(product[:revenue], unit: "€", format: "%n %u") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- All Products Performance -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="p-6 border-b border-gray-100 flex items-center justify-between">
      <h2 class="font-piepie text-xl text-silloun-green">PERFORMANCE PRODUITS</h2>
      <%= link_to "Voir tout", mockups_producer_products_path, class: "text-silloun-green hover:underline text-sm" %>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @products.first(5).each do |product| %>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gray-100 rounded-lg overflow-hidden mr-3 flex-shrink-0">
              <%= image_tag product[:image], alt: product[:name], class: "w-full h-full object-cover" %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-gray-800 truncate"><%= product[:name] %></p>
              <div class="flex items-center space-x-2">
                <% if product[:available] %>
                  <span class="text-xs text-green-600">En stock (<%= product[:stock] %>)</span>
                <% else %>
                  <span class="text-xs text-red-600">Rupture</span>
                <% end %>
              </div>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900"><%= product[:sales_count] %></p>
              <p class="text-xs text-gray-500">ventes</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Summary Cards -->
<div class="grid md:grid-cols-3 gap-6 mt-8">
  <!-- Total Revenue All Time -->
  <div class="bg-gradient-to-br from-silloun-green to-green-700 rounded-xl p-6 text-white">
    <div class="flex items-center mb-4">
      <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <p class="text-white/80 text-sm">CA total depuis le début</p>
        <p class="text-3xl font-bold"><%= number_to_currency(@stats[:total_revenue], unit: "€", format: "%n %u") %></p>
      </div>
    </div>
  </div>

  <!-- Total Orders All Time -->
  <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-xl p-6 text-white">
    <div class="flex items-center mb-4">
      <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
      </div>
      <div>
        <p class="text-white/80 text-sm">Commandes totales</p>
        <p class="text-3xl font-bold"><%= @stats[:total_orders] %></p>
      </div>
    </div>
  </div>

  <!-- Products -->
  <div class="bg-gradient-to-br from-purple-600 to-purple-800 rounded-xl p-6 text-white">
    <div class="flex items-center mb-4">
      <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
      </div>
      <div>
        <p class="text-white/80 text-sm">Produits en catalogue</p>
        <p class="text-3xl font-bold"><%= @producer[:products_count] %></p>
      </div>
    </div>
  </div>
</div>

<!-- Export Section -->
<div class="mt-8 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
    <div>
      <h3 class="font-piepie text-lg text-silloun-green">EXPORTER VOS DONNÉES</h3>
      <p class="text-gray-600 text-sm mt-1">Téléchargez vos statistiques au format CSV ou PDF</p>
    </div>
    <div class="mt-4 md:mt-0 flex space-x-3">
      <button class="btn-silloun-outline inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Export CSV
      </button>
      <button class="btn-silloun-outline inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        Export PDF
      </button>
    </div>
  </div>
</div>
