<% content_for(:title, "Modifier ma présence - Espace Producteur") %>

<!-- Header -->
<div class="mb-8">
  <div class="flex items-center mb-4">
    <%= link_to mockups_producer_market_presences_path, class: "text-gray-500 hover:text-silloun-green transition mr-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green">MODIFIER MA PRÉSENCE</h1>
  </div>
  <p class="text-gray-600">Modifiez votre présence sur <%= @market_presence[:market][:name] %></p>
</div>

<%= form_with url: mockups_producer_market_presence_path(@market_presence[:id]), method: :patch, local: true, class: "space-y-8" do |f| %>
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Form -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Market Info (readonly) -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">MARCHÉ</h2>
        </div>
        <div class="p-6">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div>
              <p class="font-bold text-gray-900"><%= @market_presence[:market][:name] %></p>
              <p class="text-gray-600"><%= @market_presence[:market][:address] %>, <%= @market_presence[:market][:city] %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Presence Details -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">VOTRE PRÉSENCE</h2>
        </div>
        <div class="p-6 space-y-6">
          <!-- Day -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Jour de présence *</label>
            <select name="day" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green bg-white">
              <% ["Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi", "Dimanche"].each do |day| %>
                <option value="<%= day %>" <%= 'selected' if @market_presence[:day] == day %>><%= day %></option>
              <% end %>
            </select>
          </div>

          <!-- Hours -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Heure de début *</label>
              <input type="time" name="start_time" value="<%= @market_presence[:start_time] %>"
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Heure de fin *</label>
              <input type="time" name="end_time" value="<%= @market_presence[:end_time] %>"
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
            </div>
          </div>

          <!-- Stand Number -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Numéro de stand (optionnel)</label>
            <input type="text" name="stand_number" value="<%= @market_presence[:stand_number] %>"
                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green"
                   placeholder="Ex: A12, B8...">
          </div>

          <!-- Active -->
          <div class="flex items-center">
            <input type="checkbox" name="active" <%= 'checked' if @market_presence[:active] %> class="w-5 h-5 border-gray-300 rounded accent-green-700 mr-3">
            <span class="text-gray-700">Présence active</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Save Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sticky top-4">
        <h3 class="font-semibold text-gray-800 mb-4">Actions</h3>
        <div class="space-y-3">
          <button type="submit" class="btn-silloun-primary w-full">
            Enregistrer
          </button>
          <%= link_to "Annuler", mockups_producer_market_presences_path, class: "btn-silloun-outline w-full text-center block" %>
        </div>
      </div>

      <!-- Danger Zone -->
      <div class="bg-white rounded-xl shadow-sm border border-red-200 p-6">
        <h3 class="font-semibold text-red-600 mb-4">Se désinscrire</h3>
        <p class="text-sm text-gray-600 mb-4">Vous ne serez plus visible sur ce marché.</p>
        <button type="button" class="w-full py-2 px-4 border-2 border-red-500 text-red-500 rounded-lg font-semibold hover:bg-red-50 transition">
          Se désinscrire du marché
        </button>
      </div>
    </div>
  </div>
<% end %>
