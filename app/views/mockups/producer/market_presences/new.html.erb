<% content_for(:title, "S'inscrire à un marché - Espace Producteur") %>

<!-- Header -->
<div class="mb-8">
  <div class="flex items-center mb-4">
    <%= link_to mockups_producer_market_presences_path, class: "text-gray-500 hover:text-silloun-green transition mr-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green">S'INSCRIRE À UN MARCHÉ</h1>
  </div>
  <p class="text-gray-600">Choisissez un marché et indiquez vos jours de présence</p>
</div>

<%= form_with url: mockups_producer_market_presences_path, method: :post, local: true, class: "space-y-8" do |f| %>
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Form -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Market Selection -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">CHOISIR UN MARCHÉ</h2>
        </div>
        <div class="p-6">
          <select name="market_id" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green bg-white">
            <option value="">Sélectionnez un marché</option>
            <% @available_markets.each do |market| %>
              <option value="<%= market[:id] %>"><%= market[:name] %> - <%= market[:city] %> (<%= market[:distance] %> km)</option>
            <% end %>
          </select>
        </div>
      </div>

      <!-- Presence Details -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
          <h2 class="font-piepie text-xl text-silloun-green">VOTRE PRÉSENCE</h2>
        </div>
        <div class="p-6 space-y-6">
          <!-- Day -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Jour de présence *</label>
            <select name="day" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green bg-white">
              <option value="">Sélectionnez un jour</option>
              <option value="Lundi">Lundi</option>
              <option value="Mardi">Mardi</option>
              <option value="Mercredi">Mercredi</option>
              <option value="Jeudi">Jeudi</option>
              <option value="Vendredi">Vendredi</option>
              <option value="Samedi">Samedi</option>
              <option value="Dimanche">Dimanche</option>
            </select>
          </div>

          <!-- Hours -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Heure de début *</label>
              <input type="time" name="start_time" value="08:00"
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Heure de fin *</label>
              <input type="time" name="end_time" value="13:00"
                     class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green">
            </div>
          </div>

          <!-- Stand Number -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Numéro de stand (optionnel)</label>
            <input type="text" name="stand_number" 
                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-silloun-green"
                   placeholder="Ex: A12, B8...">
            <p class="text-sm text-gray-500 mt-1">Aide vos clients à vous retrouver facilement</p>
          </div>

          <!-- Active -->
          <div class="flex items-center">
            <input type="checkbox" name="active" checked class="w-5 h-5 border-gray-300 rounded accent-green-700 mr-3">
            <span class="text-gray-700">Présence active (les clients peuvent choisir ce point de retrait)</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Save Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sticky top-4">
        <h3 class="font-semibold text-gray-800 mb-4">Actions</h3>
        <div class="space-y-3">
          <button type="submit" class="btn-silloun-primary w-full">
            <svg class="w-5 h-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            S'inscrire
          </button>
          <%= link_to "Annuler", mockups_producer_market_presences_path, class: "btn-silloun-outline w-full text-center block" %>
        </div>
      </div>

      <!-- Info -->
      <div class="bg-silloun-yellow rounded-xl p-6">
        <h3 class="font-semibold text-silloun-green mb-3">ℹ️ À savoir</h3>
        <ul class="space-y-2 text-sm text-silloun-green">
          <li>• Les clients pourront récupérer leurs commandes sur ce marché</li>
          <li>• Indiquez votre numéro de stand pour faciliter le retrait</li>
          <li>• Vous pouvez vous désinscrire à tout moment</li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
