<% content_for(:title, "Commande #{@order[:reference]} - Espace Producteur") %>

<!-- Header -->
<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
  <div class="flex items-center">
    <%= link_to mockups_producer_orders_path, class: "text-gray-500 hover:text-silloun-green transition mr-3" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div>
      <div class="flex items-center space-x-3">
        <h1 class="font-piepie text-3xl md:text-4xl text-silloun-green"><%= @order[:reference] %></h1>
        <% status_colors = {
          "new" => "bg-blue-100 text-blue-800",
          "preparing" => "bg-yellow-100 text-yellow-800",
          "ready" => "bg-green-100 text-green-800",
          "picked_up" => "bg-gray-100 text-gray-600"
        } %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= status_colors[@order[:status]] %>">
          <%= @order[:status_label] %>
        </span>
      </div>
      <p class="text-gray-600">PassÃ©e <%= time_ago_in_words(@order[:created_at]) %></p>
    </div>
  </div>
  
  <!-- Actions -->
  <div class="flex items-center space-x-3 mt-4 md:mt-0">
    <% case @order[:status] %>
    <% when "new" %>
      <button class="btn-silloun-primary inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        Commencer la prÃ©paration
      </button>
    <% when "preparing" %>
      <button class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-xl transition inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Marquer comme prÃªte
      </button>
    <% when "ready" %>
      <button class="btn-silloun-primary inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Confirmer le retrait
      </button>
    <% end %>
  </div>
</div>

<div class="grid lg:grid-cols-3 gap-8">
  <!-- Main Content -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Order Timeline -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="font-piepie text-xl text-silloun-green mb-6">SUIVI DE LA COMMANDE</h2>
      <div class="flex items-center justify-between">
        <% steps = [
          { status: "new", label: "Nouvelle", icon: "ðŸ“¥" },
          { status: "preparing", label: "PrÃ©paration", icon: "ðŸ“¦" },
          { status: "ready", label: "PrÃªte", icon: "âœ…" },
          { status: "picked_up", label: "RetirÃ©e", icon: "ðŸŽ‰" }
        ] %>
        <% current_step = steps.find_index { |s| s[:status] == @order[:status] } %>
        
        <% steps.each_with_index do |step, index| %>
          <div class="flex flex-col items-center flex-1">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-lg
                        <%= index <= current_step ? 'bg-silloun-green text-white' : 'bg-gray-200 text-gray-400' %>">
              <%= index <= current_step ? step[:icon] : (index + 1) %>
            </div>
            <span class="text-xs mt-2 text-center <%= index <= current_step ? 'text-silloun-green font-medium' : 'text-gray-400' %>">
              <%= step[:label] %>
            </span>
          </div>
          <% if index < steps.length - 1 %>
            <div class="flex-1 h-1 mx-2 rounded <%= index < current_step ? 'bg-silloun-green' : 'bg-gray-200' %>"></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Order Items -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6 border-b border-gray-100">
        <h2 class="font-piepie text-xl text-silloun-green">ARTICLES COMMANDÃ‰S</h2>
      </div>
      <div class="divide-y divide-gray-100">
        <% @order[:items].each do |item| %>
          <div class="p-4 flex items-center">
            <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden mr-4 flex-shrink-0">
              <%= image_tag "pictures/vobs.studio_httpss.mj.run2yoSBUleddg_Photo_dun_ensemble_de_lg_2c75fed6-bb89-496e-85c3-71561aae6c38_1.png", alt: item[:name], class: "w-full h-full object-cover" %>
            </div>
            <div class="flex-1">
              <p class="font-medium text-gray-900"><%= item[:name] %></p>
              <p class="text-sm text-gray-500"><%= item[:quantity] %> Ã— <%= number_to_currency(item[:price], unit: "â‚¬", format: "%n %u") %> / <%= item[:unit] %></p>
            </div>
            <div class="text-right">
              <p class="font-bold text-gray-900"><%= number_to_currency(item[:subtotal], unit: "â‚¬", format: "%n %u") %></p>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Total -->
      <div class="p-6 bg-gray-50 border-t border-gray-100">
        <div class="flex items-center justify-between">
          <span class="font-semibold text-gray-700">Total de la commande</span>
          <span class="text-2xl font-bold text-silloun-green"><%= number_to_currency(@order[:total], unit: "â‚¬", format: "%n %u") %></span>
        </div>
      </div>
    </div>

    <!-- Preparation Checklist -->
    <% if @order[:status] == "preparing" %>
      <div class="bg-silloun-yellow rounded-xl p-6">
        <h3 class="font-piepie text-lg text-silloun-green mb-4">CHECKLIST PRÃ‰PARATION</h3>
        <div class="space-y-3">
          <% @order[:items].each do |item| %>
            <label class="flex items-center p-3 bg-white rounded-lg cursor-pointer hover:bg-gray-50 transition">
              <input type="checkbox" class="w-5 h-5 border-gray-300 rounded accent-green-700 mr-3">
              <span class="flex-1"><%= item[:quantity] %> Ã— <%= item[:name] %></span>
            </label>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Customer Info -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="font-piepie text-lg text-silloun-green mb-4">CLIENT</h3>
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-full bg-silloun-yellow flex items-center justify-center mr-3">
          <span class="text-silloun-green font-bold"><%= @order[:customer][:name].split.map(&:first).join %></span>
        </div>
        <div>
          <p class="font-semibold text-gray-900"><%= @order[:customer][:name] %></p>
