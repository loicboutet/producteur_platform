<!DOCTYPE html>
<html lang="fr">
  <head>
    <title><%= content_for(:title) || "Mon Compte - Silloun" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      .font-piepie {
        font-family: 'Montserrat', sans-serif;
        font-weight: 900;
        letter-spacing: -0.02em;
        text-transform: uppercase;
      }
      
      .font-marydale {
        font-family: 'Brush Script MT', 'Segoe Script', cursive;
        font-style: italic;
      }
      
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>

  <body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Mockup indicator banner -->
    <div class="bg-gray-800 text-white text-center py-1 text-xs">
      ðŸŽ¨ Mode Mockup (Account) - <%= link_to "Retour Ã  l'index", mockups_index_path, class: "underline hover:text-silloun-yellow" %>
    </div>

    <!-- Header -->
    <header class="bg-silloun-green shadow-md">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <%= link_to mockups_public_home_index_path, class: "flex items-center" do %>
            <%= silloun_logo(variant: :jaune, size: 72) %>
          <% end %>

          <!-- Navigation -->
          <nav class="hidden md:flex items-center space-x-6">
            <%= link_to "Produits", mockups_public_products_path, class: "text-white hover:text-silloun-yellow transition text-sm font-medium" %>
            <%= link_to "Producteurs", mockups_public_producers_path, class: "text-white hover:text-silloun-yellow transition text-sm font-medium" %>
            <%= link_to "MarchÃ©s", mockups_public_markets_path, class: "text-white hover:text-silloun-yellow transition text-sm font-medium" %>
          </nav>

          <!-- User Menu -->
          <div class="flex items-center space-x-4">
            <!-- Cart -->
            <%= link_to mockups_public_cart_path, class: "relative text-white hover:text-silloun-yellow transition" do %>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span class="absolute -top-1 -right-1 bg-silloun-yellow text-silloun-green text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold">2</span>
            <% end %>

            <!-- User dropdown (simplified) -->
            <div class="relative">
              <button class="flex items-center space-x-2 text-white hover:text-silloun-yellow transition">
                <div class="w-8 h-8 bg-silloun-yellow rounded-full flex items-center justify-center">
                  <span class="text-silloun-green font-bold text-sm">JM</span>
                </div>
                <span class="hidden md:inline text-sm">Jean Martin</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content with Sidebar -->
    <div class="flex-1 flex">
      <!-- Sidebar -->
      <aside class="hidden md:block w-64 bg-white border-r border-gray-200">
        <nav class="p-4 space-y-1">
          <p class="text-xs text-gray-400 uppercase tracking-wider mb-3 px-3">Mon compte</p>
          
          <%= link_to mockups_account_dashboard_path, 
              class: "flex items-center px-3 py-2 rounded-lg transition #{request.path.include?('dashboard') ? 'bg-silloun-green text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Tableau de bord
          <% end %>
          
          <%= link_to mockups_account_orders_path, 
              class: "flex items-center px-3 py-2 rounded-lg transition #{request.path.include?('orders') ? 'bg-silloun-green text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            Mes commandes
            <span class="ml-auto bg-silloun-yellow text-silloun-green text-xs px-2 py-0.5 rounded-full font-bold">1</span>
          <% end %>
          
          <%= link_to mockups_account_profile_path, 
              class: "flex items-center px-3 py-2 rounded-lg transition #{request.path.include?('profile') ? 'bg-silloun-green text-white' : 'text-gray-700 hover:bg-gray-100'}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Mon profil
          <% end %>
          
          <div class="border-t border-gray-200 my-4"></div>
          
          <%= link_to mockups_public_home_index_path, class: "flex items-center px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100 transition" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Continuer mes achats
          <% end %>
          
          <a href="#" class="flex items-center px-3 py-2 rounded-lg text-red-600 hover:bg-red-50 transition">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            DÃ©connexion
          </a>
        </nav>
      </aside>

      <!-- Mobile Navigation -->
      <div class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 z-50">
        <nav class="flex justify-around py-2">
          <%= link_to mockups_account_dashboard_path, class: "flex flex-col items-center p-2 #{request.path.include?('dashboard') ? 'text-silloun-green' : 'text-gray-500'}" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span class="text-xs mt-1">Accueil</span>
          <% end %>
          
          <%= link_to mockups_account_orders_path, class: "flex flex-col items-center p-2 relative #{request.path.include?('orders') ? 'text-silloun-green' : 'text-gray-500'}" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <span class="text-xs mt-1">Commandes</span>
            <span class="absolute top-1 right-1 bg-silloun-yellow text-silloun-green text-xs w-4 h-4 rounded-full flex items-center justify-center font-bold">1</span>
          <% end %>
          
          <%= link_to mockups_account_profile_path, class: "flex flex-col items-center p-2 #{request.path.include?('profile') ? 'text-silloun-green' : 'text-gray-500'}" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-xs mt-1">Profil</span>
          <% end %>
          
          <%= link_to mockups_public_home_index_path, class: "flex flex-col items-center p-2 text-gray-500" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-xs mt-1">Boutique</span>
          <% end %>
        </nav>
      </div>

      <!-- Page Content -->
      <main class="flex-1 p-4 md:p-8 pb-24 md:pb-8">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
