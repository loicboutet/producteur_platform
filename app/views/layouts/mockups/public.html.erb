        </div>
      </div>
    </header>

    <!-- Flash Messages -->
    <% if content_for?(:flash) %>
      <div class="max-w-7xl mx-auto px-4 py-4">
        <%= yield :flash %>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="flex-1">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-silloun-green text-white mt-auto">
